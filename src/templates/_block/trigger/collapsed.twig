{% set data = [] %}
{% set t = notifierOptions.triggers %}

{% for key,val in trigger.config %}
    {% switch key %}
    {% case 'newExisting' %}
        {% if 'both' == val %}
            {% set newExisting = 'Both New & Existing' %}
        {% elseif (t.newExisting[val] ?? false) %}
            {% set newExisting = t.newExisting[val] %}
        {% endif %}
        {% set data = data|merge(["<strong>#{newExisting}</strong>"]) %}
    {% case 'includeDraftsAndRevisions' %}
        {% set draftsRevisions = (val ? 'Include Drafts/Revisions' : 'Exclude Drafts/Revisions') %}
        {% set data = data|merge([draftsRevisions]) %}
    {% endswitch %}
{% endfor %}

{% for sectionId,section in notifierOptions.triggers.sectionsEntryTypes if sectionId in trigger.config.sections %}
    {% set types = [] %}
    {% for typeId,type in section.entryTypes if typeId in trigger.config.entryTypes %}
        {% set types = types|merge([type]) %}
    {% endfor %}
    {% set sectionWithTypes = "<strong>#{section.name}</strong> &rarr; #{types|join(', ')}" %}
    {% set data = data|merge([sectionWithTypes]) %}
{% endfor %}

<div class="collapsed">
    {{ data|join(' &nbsp;&bull;&nbsp; ')|raw }}
</div>
