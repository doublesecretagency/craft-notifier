{% import '_includes/forms' as forms %}

<h2>Configure the Message</h2>

<div id="message-body" style="margin-top:24px">

    {{ forms.selectField({
        label: "Message Type"|t('notifier'),
        instructions: "**BETA:** While in beta, only email messages are available."|t('notifier'),
        id: 'type',
        name: 'type',
        options: {
            'email': 'Email',
        },
        value: (message.type ?? null)
    }) }}
    {# 'sms': 'SMS (Text Message)' #}

    {{ forms.autosuggestField({
        label: "Message Template"|t('notifier'),
        instructions: "Which Twig template will be used to generate the message body?"|t('notifier'),
        id: 'template',
        name: 'template',
        suggestions: craft.cp.getTemplateSuggestions(),
        value: (message.template ?? null)
    }) }}

    {{ forms.textField({
        label: "Message Subject"|t('notifier'),
        instructions: "For email messages only. Will parse Twig tags."|t('notifier'),
        id: 'config[subject]',
        name: 'config[subject]',
        value: (message.config.subject ?? null)
    }) }}

</div>
