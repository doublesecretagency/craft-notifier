{% set trigger = notifier.getTriggerById(triggerId) %}

<a class="trigger" href="{{ cpUrl("notifier/trigger/#{trigger.id}") }}" tabindex="0">
    {% switch trigger.event %}
        {% case 'Entry::EVENT_AFTER_SAVE' %}
            <div class="block-label">When an Entry is saved</div>
        {% default %}
            <div class="block-label">{{ trigger.event }}</div>
    {% endswitch %}
</a>

{% css %}
.trigger {
    color: #ffffff;
    background-color: #8b1b31;
    display: block;
    cursor: pointer;
    padding: 10px 16px;
}
.trigger:hover {
    color: #000000;
    background-color: #e3534c;
    text-decoration: none;
}
{% endcss %}
